{
  "name": "mars-robots",
  "version": "1.0.0",
  "description": "A simple Node.js project to control hypothetical robots on Mars",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "test": "jest"
  },
  "author": "Andreas Nel",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.2",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2"
  },
  "lint-staged": {
    "!(*.js)": "prettier --write --ignore-unknown",
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
